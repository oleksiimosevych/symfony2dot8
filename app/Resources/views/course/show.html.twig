{% extends 'base.html.twig' %}
{% block body %}
<link rel="stylesheet" href="{{ asset('bundles/courses/css/main.css') }}" type="text/css" media="all" />
    {% if app.request.get('token') %}
        {% include 'CoursesBundle:Course:admin.html.twig' with {'course': course} %}
    {% endif %}
    <h1>Course</h1>
    <center><table class="table table-bordered" id='courses_table'>
        <tbody>
            <tr>
                <th><a>Номер</a></th>
                <td>{{ course.id }}</td>
            </tr>
            <tr>
                <th>Назва</th>
                <td>{{ course.name }}</td>
            </tr>
            <tr>
                <th>Призначення курсу</th>
                <td>{{ course.type }}</td>
            </tr>
            <tr>
                <th>Опис</th>
                <td>{{ course.contents }}</td>
            </tr>
            <tr>
                <th>Ціна</th>
                <td>{{ course.price }}</td>
            </tr>
            <tr>
                <th>Дата створення</th>
                <td>{% if course.createdat %}{{ course.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Останнє оновлення</th>
                <td>{% if course.updatedat %}{{ course.updatedat|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>


        <h3>
            <a href="{{ path('course_index') }}">Повернутися на головну</a>
        </h3>
        <h3>
            <a href="{{ path('course_edit', { 'token': course.token }) }}">Оновити</a>
        </h3>

{% endblock %}
